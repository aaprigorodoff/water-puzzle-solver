{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": ["eslint:recommended", "airbnb-base"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-tabs":[
            "error",
            { "allowIndentationTabs": true }
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "spaced-comment": "off",
        "comma-dangle": "off",
        "no-console": "off",
        "max-len": [
            "error",
            {"ignoreComments": true},
            {"code": 140}
        ]
    }
}
